{{>header}}

<title> {{event.metaTitle}}</title>
<meta name="description" content="{{event.metaDescription}}">
<meta name="keywords" content="{{event.metaKeywords}}">

{{>navbar}}
{{>hero}}

<div class="container-fluid event py-5">
    <div class="row mx-3">
        <div class="col-md-9">
            <h3 class="bg-primary text-light p-2 text-center">{{event.name}}</h3>
            <table class="table table-bordered border-3 border-primary">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{event.date}}</td>
                        <td>{{event.time}}</td>
                        <td>{{event.location}}</td>
                    </tr>
                </tbody>
            </table>
            <p class="text-justify mb-3">{{event.shortDescription}}</p>
            <img src="/{{event.cover}}" height="400px" width="100%" alt="">
            <div class="card p-3">
                <p class="text-justify mb-3">{{{event.longDescription}}}</p>
            </div>
        </div>
        <div class="col-md-3">
            <h4 class="bg-primary text-light p-2 text-center">Our Other Events</h4>
            {{#each allEvents}}
            <a href="/event/{{_id}}" class="d-block bg-primary text-white p-2 mb-1 fs-5 ps-4">{{name}}</a>
            {{/each}}
        </div>
    </div>
</div>

{{>footer}}