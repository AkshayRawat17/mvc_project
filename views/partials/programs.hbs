<!-- Programs Start -->
<div class="container-fluid program py-5">
  <div class="container py-5">
    <div
      class="mx-auto text-center wow fadeIn"
      data-wow-delay="0.1s"
      style="max-width: 700px;"
    >
      <h4
        class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius"
      >Our Programs</h4>
      <h1 class="mb-5 display-3">We Offer An Exclusive Program For Kids</h1>
    </div>
    <div class="g-5">
      <div class="swiper mySwiper" style="height: 610px;">
        <div class="swiper-wrapper w-100">
          {{#each programs}}
            <div class="swiper-slide">
              <div class="wow fadeIn" data-wow-delay="0.1s">
                <div class="program-item rounded">
                  <div class="program-img position-relative">
                    <div class="overflow-hidden img-border-radius">
                      <img
                        src="/{{cover}}"
                        class="img-fluid w-100"
                        alt="Image"
                        style="height: 250px;"
                      />
                    </div>
                    <div
                      class="px-4 py-2 bg-primary text-white program-rate"
                    >&#8377;{{fee}}</div>
                  </div>
                  <div class="program-text bg-white px-4 pb-3">
                    <div class="program-text-inner">
                      <a href="/program/{{_id}}" class="h4">{{name}}</a>
                      <p
                        class="mt-3 w-100 mb-0 admin-description"
                      >{{shortDescription}}</p>
                    </div>
                  </div>
                  <div
                    class="d-flex justify-content-between px-4 py-3 bg-primary rounded-bottom"
                  >
                    <small class="text-white" style="font-size: 1rem;"><i
                        class="fas fa-wheelchair me-1"
                      ></i>
                      {{seats}}
                      Seats</small>
                    <a
                      href="/program/{{_id}}"
                      class="text-white"
                      style="font-size: 1rem;"
                    >View </a>
                    <small class="text-white" style="font-size: 1rem;"><i
                        class="fas fa-clock me-1"
                      ></i>
                      {{duration}}
                      Hours</small>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      {{#if (showButtonHelper "Programs" title)}}
        <div class="text-center wow fadeIn mt-5 mb-3" data-wow-delay="0.1s">
          <a
            href="/program"
            class="btn btn-primary px-5 py-3 text-white btn-border-radius"
          >View All Programs</a>
        </div>
      {{/if}}
    </div>
  </div>
</div>
<!-- Program End -->