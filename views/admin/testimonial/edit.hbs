{{>header}}        

        <title> {{title}}</title>

{{>navbar}}
{{>hero}}

<div class="container-fluid my-3">
        <div class="row">
                <div class="col-md-3">
                        {{>sidebar}}
                </div>
                <div class="col-md-9">
                        <h5 class="bg-primary text-center text-light p-2">Update Testimonial<a href="/admin/testimonial" class="text-light float-end">Back</a></h5>
                        <form action="/admin/testimonial/update/{{data._id}}" method="post" enctype="multipart/form-data">
                           <div class="row">
                                <div class="col-md-6 mb-3">
                                        <label>Name*</label>
                                        <input type="text" name="name" placeholder="Full Name" value="{{data.name}}" class="form-control border-3 border-primary">
                                        {{#if errorMessage.name}} <p class="text-danger">{{errorMessage.name}}</p> {{/if}}
                                </div>
                                <div class="col-md-6 mb-3">
                                        <label>Profession*</label>
                                        <input type="text" name="profession" placeholder="Profession" value="{{data.profession}}"class="form-control border-3 border-primary">
                                        {{#if errorMessage.profession}} <p class="text-danger">{{errorMessage.profession}}</p> {{/if}}
                                </div>
                           </div>

                           <div class="mb-3">
                                <label>Message*</label>
                                <textarea name="message" placeholder="Message..." rows="4" class="form-control border-3 border-primary">{{data.message}}</textarea>
                                {{#if errorMessage.message}} <p class="text-danger">{{errorMessage.message}}</p> {{/if}}
                           </div>
                           
                           <div class="row">
                                <div class="col-md-4 col-sm-6 mb-3">
                                        <label>Pic</label>
                                        <input type="file" name="pic" class="form-control border-3 border-primary">
                                        {{#if errorMessage.pic}} <p class="text-danger">{{errorMessage.pic}}</p> {{/if}}
                                </div>
                                <div class="col-md-4 col-sm-6 mb-3">
                                        <label>Active</label>
                                        <select name="active" class="form-select border-3 border-primary">
                                                <option value="1" {{dropdownHelper data.active true}}>Yes</option>
                                                <option value="0" {{dropdownHelper data.active false}}>No</option>
                                        </select>
                                </div>
                                <div class="col-md-4 col-sm-6 mb-3">
                                        <label>Sort Order</label>
                                        <input type="number" name="sortOrder" value="{{data.sortOrder}}" placeholder="Sort Order" class="form-control border-3 border-primary">
                                </div>
                           </div>

                           <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100">Update</button>
                           </div>
                        </form>
                </div>
        </div>
</div>

{{>footer}}
